# 本地构建 Dockerfile（从 nexus 目录构建）
# 构建命令: cd nexus && docker build -f Dockerfile.local -t nexus:latest .

FROM rust:1.75 as builder

WORKDIR /app

# 安装依赖
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# 复制 workspace 根目录的 Cargo 文件
COPY ../Cargo.toml ../Cargo.lock ./

# 复制所有 workspace members
COPY ../llm-adapter ./llm-adapter
COPY ../agentflow ./agentflow
COPY Cargo.toml Cargo.lock ./

# 创建 dummy src 目录以缓存依赖
RUN mkdir src && echo "fn main() {}" > src/main.rs

# 构建依赖（缓存层）
RUN cargo build --release --workspace && rm -rf src

# 复制源代码
COPY src ./src

# 构建应用
RUN cargo build --release -p nexus

# 运行时镜像
FROM debian:bookworm-slim

WORKDIR /app

# 安装运行时依赖和 curl（用于健康检查）
RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    curl \
    && rm -rf /var/lib/apt/lists/*

# 从构建阶段复制二进制文件
COPY --from=builder /app/target/release/nexus /app/nexus

# 创建非 root 用户
RUN useradd -m -u 1000 nexus && \
    chown -R nexus:nexus /app

USER nexus

# 暴露端口
EXPOSE 3000

# 健康检查
HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:3000/health || exit 1

# 启动应用
CMD ["./nexus"]

